<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.splashscreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.authentication.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.authentication.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFilmFragment"
            app:destination="@id/detailFilmFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoritedListFragment"
            app:destination="@id/favoritedListFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_settingLanguageFragment"
            app:destination="@id/settingLanguageFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFilmFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.disneycharacter.DetailDisneyCharaFragment"
        android:label="fragment_detail_film"
        tools:layout="@layout/fragment_detail_disney_chara" >
        <argument
            android:name="idDiscneyChara"
            app:argType="binar.academy.challenge_chapter5_rahmadina.model.DisneyCharaResponse" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" >
        <argument
            android:name="userProfile"
            app:argType="binar.academy.challenge_chapter5_rahmadina.model.UserResponse"
            app:nullable="true" />
    </fragment>
    <dialog
        android:id="@+id/settingLanguageFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.profile.SettingLanguageFragment"
        android:label="fragment_setting_language"
        tools:layout="@layout/fragment_setting_language" />
    <fragment
        android:id="@+id/favoritedListFragment"
        android:name="binar.academy.challenge_chapter5_rahmadina.view.favoritedChar.FavoritedListFragment"
        android:label="fragment_favorited_list"
        tools:layout="@layout/fragment_favorited_list" />
</navigation>